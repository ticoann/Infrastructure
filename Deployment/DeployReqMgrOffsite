# vim: setw ft=sh sw=2 ts=8 et :
deploy_reqmgroffsite_deps()
{
  deploy CouchDBOffsite
  deploy MySQL
  deploy WMCore
}

deploy_reqmgroffsite_prep()
{
  mkproj reqmgr config
}

deploy_reqmgroffsite_sw()
{
  deploy_pkg -d reqmgr -l cherrypy  comp external+cherrypy+3.1.2-cmp6
  deploy_pkg -d reqmgr -l cheetah  comp external+py2-cheetah+2.4.0-cmp6
  deploy_pkg -d reqmgr -l openid   comp external+py2-openid+2.2.4-cmp6
  deploy_pkg -d reqmgr -l py2-cjson   comp external+py2-cjson+1.0.5-cmp5
  deploy_pkg -d reqmgr -l dls-client   comp  cms+dls-client+DLS_1_1_2-cmp6
  deploy_pkg -d reqmgr -l dbs-client   comp  cms+dbs-client+DBS_2_1_1_patch1_1-cmp
}

deploy_reqmgroffsite_post()
{
  local wmcore_root=$root/projects/wmcore
  local wmcore_etc=$wmcore_root/app/etc
  local reqmgr_root=$root/projects/reqmgr


  # get manage script from wmcore
  /bin/cp $wmcore_etc/deploy/reqmgr-manage  $reqmgr_root/config/manage
  #override the webtools couch config
  local couchdb_root=$root/projects/couchdb
  local couchdb_ini=$couchdb_root/config/local.ini
  /bin/cp $wmcore_etc/deploy/wmagent-couch.ini $couchdb_ini
  perl -p -i -e "s{deploy_project_root}{$root/projects}g" $couchdb_ini

  #Grab the WMAgent MySQL config
  local mysql_root=$root/projects/mysql
  /bin/cp $wmcore_etc/deploy/wmagent-mysql.cnf $mysql_root/config/my.cnf
}
