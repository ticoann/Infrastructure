# vim: set ft=sh sw=2 ts=8 et :
deploy_t0mon_deps()
{
  deploy T0DataSvc
}

deploy_t0mon_prep()
{
  mkproj t0mon var logs
  setgroup ug+rw,o-w _t0mon $PWD/{var,logs}
}

deploy_t0mon_sw()
{
  deploy_pkg -d t0mon -l app -c Tier0 comp cms+T0Mon 4.0.8a
}

deploy_t0mon_post()
{
  cd $root/projects/t0mon
  (crontab -l | { fgrep -v -e $PWD/ || true; }
   sysboot _t0mon) | crontab -
}
