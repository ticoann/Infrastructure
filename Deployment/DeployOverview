# vim: set ft=sh sw=2 ts=8 et :
deploy_overview_deps()
{
  deploy Backend
}

deploy_overview_prep()
{
  mkproj overview server logarch
  setgroup ug+rw,o-w _overview $PWD/server
}

deploy_overview_sw()
{
  deploy_pkg -d overview -f -l app -c Overview comp cms+overview 5.2.1c
  perl -p -i -e "s{/data/projects}{$root/projects}g" config/*.py
  cp -p /afs/cern.ch/project/oracle/admin/tnsnames.ora config/tnsnames.ora
  setgroup u+rw,go-w _config config/tnsnames.ora
}

deploy_overview_post()
{
  cd $root/projects/overview
  (crontab -l | { fgrep -v -e $PWD/ || true; }
   sysboot _overview; echo "17 2 * * * $PWD/config/daily") | crontab -
}
