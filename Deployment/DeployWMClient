# vim: set ft=sh sw=2 ts=8 et :
deploy_wmclient_deps()
{
  true
}

deploy_wmclient_prep()
{
  mkproj wmclient etc
}

deploy_wmclient_sw()
{
  deploy_pkg -d wmclient -l httplib2 comp external+py2-httplib2+0.6.0-cmp4
  deploy_pkg -d wmclient -l wmcore  comp cms+wmcore+WMCORE_0_6_11
}

deploy_wmclient_post()
{

  local wmclient_root=$root/projects/wmclient
  local wmclient_etc=$wmclient_root/config
  local wmclient_setup=$wmclient_root/etc/wmclient.sh

  echo '#!/bin/bash' > $wmclient_setup
  echo "THIS_SCRIPT=$wmclient_setup" >> $wmclient_setup

cat >> $wmclient_setup <<'EOF'
PROJ_DIR=$(dirname $(dirname $THIS_SCRIPT))
ROOT_DIR=$(dirname $(dirname $(dirname $THIS_SCRIPT)))
export WMCORE_ROOT="$PROJ_DIR/wmcore"
. $PROJ_DIR/wmcore/etc/profile.d/init.sh
. $PROJ_DIR/httplib2/etc/profile.d/init.sh
export PATH=$PATH:$PROJ_DIR/wmcore/bin
export PYTHONPATH=$PYTHONPATH:$PROJ_DIR/wmcore/src/python
export PYTHONPATH=$PYTHONPATH:$PROJ_DIR/wmcore/test/python

EOF

   chmod +x $wmclient_setup

}