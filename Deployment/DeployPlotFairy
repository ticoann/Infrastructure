# vim: set ft=sh sw=2 ts=8 et :
deploy_plotfairy_deps()
{
  deploy Backend
}

deploy_plotfairy_prep()
{
  mkproj plotfairy logs
  setgroup ug+rw,o-w _plotfairy $PWD/logs
}

deploy_plotfairy_sw()
{
  deploy_pkg -d plotfairy -f -l app -c PlotFairy comp cms+plotfairy WMCORE_0_6_0-cmp
  perl -p -i -e "s{/data/projects}{$root/projects}g" config/*.py
}

deploy_plotfairy_post()
{
  cd $root/projects/plotfairy
  (crontab -l | { fgrep -v -e $PWD/ || true; }
   sysboot _plotfairy) | crontab -
}
